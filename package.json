{
  "name": "electron-clash-pro",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/index.js",
  "scripts": {
    "init": "git submodule init && git submodule update && pnpm i && cd clash-dashboard && pnpm i && npm run build",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron ./dist/index.js",
    "dev:web": "cd clash-dashboard && npm start",
    "build:web": "cd clash-dashboard && npm run build",
    "pack": "npm run build && npx electron-builder --dir"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/7zip-min": "^1.3.1",
    "@types/fs-extra": "^9.0.13",
    "@types/js-yaml": "^4.0.5",
    "electron": "^16.0.4",
    "electron-builder": "^22.14.5",
    "typescript": "^4.5.3"
  },
  "dependencies": {
    "7zip-min": "^1.4.1",
    "fs-extra": "^10.0.0",
    "got": "^11.8.3",
    "js-yaml": "^4.1.0",
    "proxy-agent": "^5.0.0",
    "tslib": "^2.3.1"
  },
  "build": {
    "appId": "com.csj8520.clash.pro",
    "removePackageScripts": true,
    "compression": "normal",
    "asar": false,
    "extraResources": [
      {
        "from": "clash",
        "to": "clash"
      },
      {
        "from": "clash-dashboard/dist",
        "to": "clash-dashboard/dist"
      },
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "directories": {
      "output": "builder"
    },
    "files": [
      "dist/**/*"
    ],
    "win": {
      "icon": "assets/icon.png",
      "target": [
        "nsis"
      ],
      "files": [
        "node_modules/7zip-bin/**/*",
        "!node_modules/7zip-bin/linux/**",
        "!node_modules/7zip-bin/win/**"
      ]
    },
    "mac": {
      "icon": "assets/icon.png",
      "target": [],
      "files": [
        "node_modules/7zip-bin/**/*",
        "!node_modules/7zip-bin/linux/**",
        "!node_modules/7zip-bin/win/**"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [],
      "files": [
        "node_modules/7zip-bin/**/*",
        "!node_modules/7zip-bin/mac/**",
        "!node_modules/7zip-bin/win/**"
      ]
    }
  },
  "external": []
}
